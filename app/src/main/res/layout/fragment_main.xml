<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="#e7e7e7"
    tools:context=".MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6">

<!--
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_default_photo"
                    android:id="@+id/imageShop"/>
-->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <VideoView android:id="@+id/videoMain"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                    </VideoView>

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="bottom|right"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"/>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/viewTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@color/ColorAccent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtLottoPoint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:textColor="#ffffff"
                        android:drawableLeft="@drawable/ic_point_white"
                        android:drawablePadding="5dp"
                        android:paddingLeft="5dp"
                        android:text="로또 포인트 : "/>

                    <TextView
                        android:id="@+id/txtSmsPoint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:textColor="#ffffff"
                        android:drawableLeft="@drawable/ic_expired"
                        android:drawablePadding="5dp"
                        android:paddingLeft="5dp"
                        android:text="만료일 : "/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_blue"
                    android:scaleType="fitXY"/>

                <GridView
                    android:id="@+id/gridMenuView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:numColumns="3"
                    android:verticalSpacing="10dp"
                    android:gravity="center"
                    android:choiceMode="singleChoice"
                    android:stretchMode="columnWidth"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_blue"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/txtNotice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:ellipsize="marquee"
                    android:textColor="#ffffff"
                    android:background="@color/ColorAccent"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text=""/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_blue"
                    android:scaleType="fitXY"/>
            </LinearLayout>

        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
