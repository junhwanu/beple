<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="@style/Widget.MyApp.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_scrollFlags="scroll|enterAlways" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical" >

            <TextView
                style="@style/form_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="상호"/>

            <EditText
                style="@style/form_edit"
                android:id="@+id/editShopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@drawable/text_form"
                android:gravity="center"
                android:maxLength="50"
                android:ems="10" />

            <TextView
                style="@style/form_text"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이름"/>

            <EditText
                style="@style/form_edit"
                android:id="@+id/editOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@drawable/text_form"
                android:gravity="center"
                android:maxLength="10"
                android:ems="10" />

            <TextView
                style="@style/form_text"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아이디"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    style="@style/form_edit"
                    android:id="@+id/editUserId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:background="@drawable/text_form"
                    android:gravity="center"
                    android:maxLength="20"
                    android:ems="10" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btnSearchId"
                    android:background="@color/PrimaryColor"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:textColor="#ffffff"
                    android:text="중복확인"/>

            </LinearLayout>

            <TextView
                style="@style/form_text"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호"/>

            <EditText
                style="@style/form_edit"
                android:id="@+id/editPasswd"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@drawable/text_form"
                android:gravity="center"
                android:maxLength="12"
                android:ems="10" />

            <TextView
                style="@style/form_text"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"/>

            <EditText
                style="@style/form_edit"
                android:id="@+id/editConfirmPasswd"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@drawable/text_form"
                android:gravity="center"
                android:maxLength="12"
                android:ems="10" />

            <TextView
                style="@style/form_text"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="휴대폰"/>

            <EditText
                style="@style/form_edit"
                android:id="@+id/editMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@drawable/text_form"
                android:gravity="center"
                android:maxLength="13"
                android:inputType="phone"
                android:ems="10" />

            <TextView
                style="@style/form_text"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="일반전화"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPhone1"
                    android:background="@drawable/text_form"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="02(서울)"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="-"/>

                <EditText
                    style="@style/form_edit"
                    android:id="@+id/editPhone2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:background="@drawable/text_form"
                    android:gravity="center"
                    android:maxLength="4"
                    android:inputType="phone"
                    android:ems="10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="-"/>

                <EditText
                    style="@style/form_edit"
                    android:id="@+id/editPhone3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:background="@drawable/text_form"
                    android:gravity="center"
                    android:maxLength="4"
                    android:inputType="phone"
                    android:ems="10" />

            </LinearLayout>

            <TextView
                style="@style/form_text"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="주소"/>

            <EditText
                style="@style/form_edit"
                android:id="@+id/editAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@drawable/text_form"
                android:gravity="center"
                android:ems="10" />

            <TextView
                style="@style/form_text"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이메일"/>

            <EditText
                style="@style/form_edit"
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:background="@drawable/text_form"
                android:gravity="center"
                android:ems="10" />

            <TextView
                style="@style/form_text"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="소속 지사"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    style="@style/form_edit"
                    android:id="@+id/editAgencyName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:background="@drawable/text_form"
                    android:gravity="center"
                    android:maxLength="20"
                    android:ems="10" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btnSearchAgency"
                    android:background="@color/PrimaryColor"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:textColor="#ffffff"
                    android:text="지사확인"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#606060"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="등록"
            android:textStyle="bold"
            android:background="@color/ColorAccent"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="취소"
            android:textStyle="bold"
            android:background="@color/PrimaryColor"
            android:textColor="#ffffff"/>
    </LinearLayout>
</LinearLayout>
